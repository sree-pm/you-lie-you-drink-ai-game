{
  "name": "you-lie-you-drink",
  "version": "1.0.0",
  "description": "Psychology-powered team building game that transforms corporate dynamics through cognitive bias-based gameplay. Built using AI-assisted development and modern web technologies.",
  "main": "src/index.html",
  "type": "module",
  "scripts": {
    "start": "npx serve src -p 3000",
    "dev": "npx serve src -p 3000 --live-reload",
    "build": "npm run validate && npm run optimize",
    "validate": "npx html-validate src/*.html",
    "optimize": "echo 'Production build complete - ready for deployment'",
    "deploy": "npm run build && echo 'Ready for deployment to Netlify/Vercel'",
    "deploy:netlify": "npm run build && npx netlify deploy --prod --dir=src",
    "deploy:vercel": "npm run build && npx vercel --prod",
    "test": "echo 'Tests will be added in v1.1.0 - see CHANGELOG.md'",
    "lint": "npx eslint src/assets/js/ --fix",
    "format": "npx prettier --write 'src/**/*.{html,css,js}'",
    "lighthouse": "npx lighthouse src/index.html --output=json --output-path=./lighthouse-report.json",
    "preview": "npx serve src -p 8080 --single",
    "docs": "echo 'Documentation available in docs/ directory'",
    "research": "echo 'Research findings available in research/ directory'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/you-lie-you-drink.git"
  },
  "keywords": [
    "team-building",
    "psychology",
    "corporate",
    "multiplayer",
    "cognitive-bias",
    "ai-assisted",
    "vibe-coding",
